@model IEnumerable<CarsWithIdentity.Models.Queries.Featured>
@{
    ViewBag.Title = "Index";
}

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Images/Special_Nissan.jpg" alt="Nissan">
                    <div class="carousel-caption">
                        <h3>You could drive it home today!</h3>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Images/Special_Mercedes.jpg" alt="Mercedes">
                </div>

                <div class="item">
                    <img src="~/Images/Special_Honda.jpg" alt="New York">
                    <div class="carousel-caption">
                        <h3>The Honda Civic of your dreams!</h3>
                    </div>

                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
<div class="container" style="border-style:solid;border-color:black;">
    <div class="col-md-12">
        <h3>Featured</h3>
        <div class="col-md-3">
            @foreach (var featured in Model)
            {
                <p><img src="@Url.Content("~/Images/"+ featured.PicturePNG)" style="width:400px;height:400px;" /></p><br />
                <p>@featured.CarYear @featured.MakeName @featured.ModelName</p><br />
                <p>$@featured.SalePrice</p>

            }
        </div>
    </div>
</div>
